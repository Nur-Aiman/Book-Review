<!DOCTYPE html>
<html>
  <head>
    <title>Add Book Review</title>
    <style>
      body {
        height: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding-top: 8rem;
        padding-left: 10%;
        padding-right: 10%;
        background-color: whitesmoke;
      }

      .form-group {
        font-size: 25px;
        text-align: center;
      }

      form {
        font-size: 25px;
        text-align: center;
      }

      label {
        color: indigo;
      }

      input[type='text'] {
        text-align: center;
      }

      textarea {
        text-align: center;
      }

      .navbar,
      .navbar-brand {
        background-color: indigo;
        color: antiquewhite;
      }
    </style>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
  </head>

  <body>
    <nav class="navbar fixed-top d-flex">
      <a href="/api/books"
        ><button class="btn btn-dark ml-auto">Home Page</button></a
      >

      <a class="navbar-brand ml-auto" style="color: wheat">Book Review</a>
      <div class="ml-auto">
        <div class="dropdown">
          <button
            class="btn btn-dark dropdown-toggle"
            type="button"
            id="dropdownMenuButton"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
          >
            <%= userEmail %>
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/api/users/logout">Logout</a>
          </div>
        </div>
      </div>
    </nav>
    <div class="container mt-4">
      <% if (locals.error) { %>
      <div class="alert alert-danger" role="alert"> <%= locals.error %> </div>
      <% } %>
      <div class="card">
        <div class="card-header">Add Book Review</div>

        <form method="POST" action="/api/books/addBook" class="p-3">
          <div class="form-group">
            <label for="title">Book Title:</label>
            <input
              type="text"
              class="form-control"
              id="title"
              name="title"
              placeholder="Enter the book title"
              value="<%= locals.title || '' %>"
              required
            />
          </div>

          <div class="form-group">
            <label for="author">Book Author:</label>
            <input
              type="text"
              class="form-control"
              id="author"
              name="author"
              placeholder="Enter the book author"
              value="<%= locals.author || '' %>"
              required
            />
          </div>

          <div class="form-group">
            <label for="image">Book Image Link:</label>
            <input
              type="text"
              class="form-control"
              id="image"
              name="image"
              placeholder="Enter the book image link"
              value="<%= locals.image || '' %>"
              required
            />
          </div>

          <div class="form-group">
            <label for="description">Book Description:</label>
            <textarea
              class="form-control"
              id="description"
              name="description"
              rows="5"
              placeholder="Enter the book description"
              required
            >
<%= locals.description || '' %></textarea
            >
          </div>

          <button type="submit" class="btn btn-dark">Submit</button>
        </form>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
